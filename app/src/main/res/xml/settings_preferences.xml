<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="Category 1">
        <android.support.v7.preference.EditTextPreference
            android:key="server_location"
            android:title="Server Location"
            android:summary="current location"
            android:dialogMessage="change server location using this entry box."
            android:defaultValue="Default value"/>
        <CheckBoxPreference
            android:key="enableAutoMode"
            android:title="@string/textEnableAuto"
            android:defaultValue="false"/>
        <SwitchPreference
            android:key="nightSwitch"
            android:title="@string/toggleMode"
            android:defaultValue="false"/>
    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>